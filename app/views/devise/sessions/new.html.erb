<div class="row">
  <div class="col-sm-6">
    <div class="page-title"><h2>Register</h2></div>
    <div class="col-lg-8 col-sm 12">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical', id: 'new_user' }, defaults: { input_html: { class: 'form-control' } }) do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors resource %>
      <%= f.input :name, :autofocus => true %>
      <%= f.input :email, :required => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>
      <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
    <% end %>
    </div>
  </div>

  <div class="col-sm-6">
    <div class="page-title"><h2>Sign in</h2></div>
    <div class="col-lg-8 col-sm 12">
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical', id: 'sign_in_user' }, defaults: { input_html: { class: 'form-control' } }) do |f| %>
      <%= f.input :email, :autofocus => true, class: 'form-control' %>
      <%= f.input :password, class: 'form-control' %>
      <div class="checkbox">
        <label><b>Remember Me</b></label>
        <%= f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      </div>
      <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
    <% end %>
    <br />
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
  </div>
</div>
