<div class="page-title"><h1><%= @user.name %> &#8212; <%= @user.email %></h1></div>
<div class="section">
  <div class="section-title"><h3>Courses</h3></div>
  <div class="section-body">
    <table>
    <tr>
      <th>Title</th>
      <th>Teacher</th>
      <th>Grade</th>
      <th>Description</th>
      <th>Room</th>
      <th>Session</th>
      <th>Students</th>
    </tr>
    <% @user.courses.each do |course| %>
      <tr data-link="<%= admin_course_path(course)%>">
        <td><%= course.name %></td>
        <td><%= course.teacher %></td>
        <td><%= course.grade %></td>
        <td><%= truncate(course.desc, length: 200) %></td>
        <td nowrap><%= course.room %></td>
        <td>
          <% reg = @user.registrations.find_by({course_id: course.id}) %>
          <%= reg.session_1 ? fa_icon('check-square-o') : fa_icon('square-o') %>
          <%= reg.session_2 ? fa_icon('check-square-o') : fa_icon('square-o') %>
          <%= reg.session_3 ? fa_icon('check-square-o') : fa_icon('square-o') %>
          <%= reg.session_4 ? fa_icon('check-square-o') : fa_icon('square-o') %>
        </td>
        <td nowrap><%= course.users.length %></td>
      </tr>
    <% end %>
  </table>
  </div>
</div>