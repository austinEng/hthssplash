<div class="page-title"><h2>New Course</h2></div>
<%= simple_form_for(@course, url: admin_courses_path, html: {class: 'form-vertical' }, defaults: { input_html: { class: 'form-control' } }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @course %>
  <%= f.input :name, :autofocus => true %>
  <%= f.input :teacher, :required => true %>
  <%= f.input :desc %>
  <%= f.input :teacher_desc %>
  <%= f.input :grade %>
  <div class='form-group'>
    <%= f.label :session %>
    <div class='checkbox'>
    <%= f.check_box(:session_1) %>
    <%= f.label(:session_1, '1') %>
    </div>
    <div class='checkbox'>
    <%= f.check_box(:session_2) %>
    <%= f.label(:session_2, '2') %>
    </div>
    <div class='checkbox'>
    <%= f.check_box(:session_3) %>
    <%= f.label(:session_3, '3') %>
    </div>
    <div class='checkbox'>
    <%= f.check_box(:session_4) %>
    <%= f.label(:session_4, '4') %>
    </div>
  </div>
  <%= f.input :room %>
  <%= f.button :submit, 'Create', :class => 'btn-primary' %>
<% end %>