<div id="courses-index">
  <div class="page-title"><h1>Available Courses</h1></div>
  <table>
    <tr>
      <th>Title</th>
      <th>Teacher</th>
      <th>Grade</th>
      <th>Description</th>
      <th>Room</th>
      <th>Time</th>
    </tr>
    <% @courses.each do |course| %>
      <tr data-link="<%= course_path(course)%>">
        <td><%= course.name %></td>
        <td><%= course.teacher %></td>
        <td><%= course.grade %></td>
        <td><%= truncate(course.desc, length: 300) %></td>
        <td nowrap><%= course.room %></td>
        <td nowrap><%= course.time.stamp('1:52 PM') %></td>
      </tr>
    <% end %>
  </table>
</div>